[Unit]
Description=Lidar Service
After=network.target

[Service]
ExecStart= /usr/bin/python3 /var/training/code/devices/lidar.py
WorkingDirectory=/var/training/code
Restart=always
User=root
Environment=PYTHONUNBUFFERED=1
Environment=PYTHONPATH="/var/training/code/:/home/orangepi/.local/lib/python3.11/site-packages/:${PYTHONPATH}"

[Install]
WantedBy=multi-user.target
